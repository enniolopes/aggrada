{
  "name": "@subsystem/outreach",
  "version": "0.1.0",
  "description": "Demo Outreach docker orchestrator por jupyter notebooks containers",
  "license": "ISC",
  "author": "enniolopes@usp.br",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "docker:build": "docker build -t outreach-orchestrator-image .",
    "docker:rm": "docker rm outreach-orchestrator || true",
    "docker:run": "docker run -d --name outreach-orchestrator -p 3000:3000 -v /var/run/docker.sock:/var/run/docker.sock -v ~/outreach_id_rsa:/root/.ssh/id_rsa:ro --env-file .env outreach-orchestrator-image",
    "docker:start": "pnpm run docker:stop && pnpm run docker:rm && pnpm run docker:build && pnpm run docker:run",
    "docker:stop": "docker stop outreach-orchestrator || true",
    "fetch-local": "npx tsx fetch.local.ts",
    "start": "nodemon --watch './**/*.ts' --exec 'npx tsx src/index.ts'"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "dockerode": "^4.0.2",
    "express": "^4.21.0",
    "simple-git": "^3.27.0",
    "tar-fs": "^3.0.6"
  },
  "devDependencies": {
    "@ttoss/config": "^1.32.10",
    "@types/body-parser": "^1.19.5",
    "@types/dockerode": "^3.3.31",
    "@types/express": "^4.17.21",
    "@types/node": "20.16.0",
    "@types/tar-fs": "^2.0.4",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
